<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="aPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ruleScreen2Controller">
    <children>
        <StackPane fx:id="sPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="backButton" prefHeight="43.0" prefWidth="119.0" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Next" StackPane.alignment="BOTTOM_CENTER">
                    <font>
                        <Font size="22.0" name="Century Gothic Bold"/>
                    </font>
                </Button>
                <Label fx:id="title" text="Rules" StackPane.alignment="TOP_CENTER">
                    <font>
                        <Font size="70.0" name="Century Gothic Bold"/>
                    </font>
                </Label>
                <Label fx:id="text" text="${'&#x2022; How to play:\n\t- Roll the dice and move the number of spaces on the game board.\n\t- You will land on one of the LIFE spaces representing student hopes and\n\t   fears (actual comments from STEM students).\n\t- The audience will decide your randomized fate (based on advisors\n\t   responses) either increasing or decreasing fears thus ending your turn.\n\t- If you get to the checkpoint with too many fears, you will be forced to\n\t   change your major (non-STEM) and are out of the game.\n\t- After the checkpoint, you will begin the next term with 2 less fears.'}" wrapText="true" StackPane.alignment="CENTER">
                    <font>
                        <Font size="25.0" name="Century Gothic Bold"/>
                    </font>
                </Label>
            </children>
        </StackPane>
    </children>
</AnchorPane>
